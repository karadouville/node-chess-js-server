- console.log("games:" + games)
html
  include includes/head.pug
  body
    h1 Welcome to AKKA Chess!
    p Let's play!
    form(action="/setup", onsubmit="return validateForm(this)")
      p Select a game you'd like to play, or create a new one
      select(name="game") Current Games
        option(value="") New Game
        for game, id in games
           option(value=id)= id
      .player-type
        input(type="radio", name="ptype", value="human" id="human")
        label(for="human") Human
        input(type="radio", name="ptype", id="ai", value="ai")
        label(for="ai") AI

      button Create Game

    button(class='button', onclick='refreshGames()') Refresh Games
